<h1>商品詳細</h1>
<div class ="container">
  <div class ="row">
    <div class ="col-4">
      <%= image_tag @item.image,size: '360x270' %>
    </div>
    <div class ="col-8">
      <table class='table'>
        <tr>
	        <th>商品名</th>
      	  <td><%= @item.name %></td>
        </tr>
        <tr>
	        <th>商品説明</th>
	        <td><%= @item.introduction %></td>
        </tr>
        <tr>
	        <th>ジャンル</th>
	        <td><%= @item.genre_id %></td>
        </tr>
        <tr>
	        <th>税込価格(税抜価格)</th>
	        <td><%= price_include_tax(@item.price).to_s(:delimited) %>円
	            (<%= @item.price.to_s(:delimited) %>円)</td>
        </tr>
        <tr>
	        <th>販売ステータス</th>
	        <td><%= @item.is_active  %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class ="row">
    <div class ="col-4">
      <%= link_to edit_admin_item_path(@item), class: "btn btn-outline-secondary btn-block edit_admin_item_#{@item.id}" do %>
       編集する
      <% end %>
    </div>
  </div>
</div>