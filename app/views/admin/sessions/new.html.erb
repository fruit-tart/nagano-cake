<div class="container">
  
  <div class="row">
    <h2>管理者ログイン</h2>
  </div>
  
  <%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="row">
    <div class="col-3">
      <%= f.label :email,"メールアドレス" %>
    </div>
    <div class="col-9">
      <%= f.email_field :email, size: 50, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <%= f.label :password, "パスワード" %>
    </div>
    <div class="col-9">
      <%= f.password_field :password, size: 50, autocomplete: "current-password" %>
    </div>
  </div>
  <div class="row">
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  </div>
  
  <div class="row">
      <%= f.submit "ログイン", class: 'btn btn-success' %>
  </div>
  <% end %>

</div>
<%= render "admin/shared/links" %>
