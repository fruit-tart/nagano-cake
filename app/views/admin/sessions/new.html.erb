<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <h1 class="mb-4">管理者ログイン</h1>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="form-row align-items-center">
          <div class="col-12 col-sm-3 mb-2">
            <%= f.label :email,"メールアドレス", class: "m-0" %>
          </div>
          <div class="col-12 col-sm-9 mb-2">
            <%= f.email_field :email, size: 50, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
          <div class="col-12 col-sm-3 mb-2">
            <%= f.label :password, "パスワード", class: "m-0" %>
          </div>
          <div class="col-12 col-sm-9 mb-2">
            <%= f.password_field :password, size: 50, autocomplete: "current-password", class: 'form-control' %>
          </div>
          <div class="col-12 col-sm-3">
            <%= f.submit "ログイン", class: 'btn btn-success btn-lg btn-block' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "admin/shared/links" %>
