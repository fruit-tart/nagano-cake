<div class="container">
  <!-- 会員氏名検索 -->
  <%= form_with(url: admin_customers_path, method: "get") do %>
    <div class="row justify-content-start align-items-center">
      <div class="col-lg-4 col-md-6">
        <div class="input-group mb-3">
          <%= text_field_tag :search, params[:search], placeholder: "Search items...", class: "form-control" %>
          <%= submit_tag "Search", class: "btn btn-outline-secondary ml-1" %>
        </div>
      </div>
    </div>
  <% end %>
  <!--ここまで-->
  <!--日付検索-->
  <%= form_with(url: admin_root_path, method: "get") do %>
    <div class="row justify-content-start align-items-center">
      <div class="col-lg-8 col-md-10">
        <div class="form-row">
          <div class="form-group col-lg-3 col-md-3">
            <%= label_tag "start_date", "検索開始日" %>
            <%= date_field_tag :start_date, params[:start_date], class: "form-control" %>
          </div>
          <div class="form-group col-lg-3 col-md-3">
            <%= label_tag "end_date", "検索終了日" %>
            <%= date_field_tag :end_date, params[:end_date], class: "form-control" %>
          </div>
          <div class="form-group col-lg-2 col-md-2 align-self-end">
            <%= submit_tag "Search", class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <!-- ここまで -->
  <div class="row">
    <h1>注文履歴一覧</h1>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="table-dark">
          <tr align="center">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
         <tbody>
          <% @orders.each do |order| %>
          <tr align="center">
            <td>
              <%= link_to l(order.created_at),admin_order_path(order) %>
            </td>
            <td><%= order.name %></td>
            <td>
              <%= order.order_details.sum(:amount) %>
            </td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
      <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>
