<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= render "public/shared/error_messages", resource: form.object %>
    <div class="form-group">
      <%= form.label :postal_code, "郵便番号(ハイフンなし)" %>
      <%= form.text_field :postal_code, pattern:"[0-9]{7}", autocomplete: "postal_code", placeholder: "0000000", class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :address, "住所" %>
      <%= form.text_field :address, autocomplete: "street-address", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :name, "宛名" %>
      <%= form.text_field :name, autocomplete: "name", placeholder: "令和道子", class: "form-control"  %>
    </div>
    <%= form.submit sublmit_value, class: "btn btn-success btn-block" %>
  </div>
</div>
