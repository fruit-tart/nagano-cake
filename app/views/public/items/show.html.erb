<h1>Public::Items#show</h1>
<p>Find me in app/views/public/items/show.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col">
      <%= image_tag @item.image %>
    </div>
    <div class="col">
      <h2><%= @item.name %></h2>
      <p><%= @item.introduction %></p>
      <p>￥<%= price_include_tax(@item.price) %>（税込）</p>

      <%= form_with(model: @new_cart_item, url: cart_items_path, method: :post, local: true) do |form| %>
        <div class="form-group">
          <%= form.hidden_field :item_id, value: @item.id %>
          <%= form.select :amount, *[1..10] %>
          <%= form.submit "カートに入れる", class: "ml-auto btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>