<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>



<div class="container">
  <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
  <table class="table">
  <thead>
    <tr>
      <th scope="col"><th>
      <th scope="col">単価<th>
      <th scope="col">数量<th>
      <th scope="col">小計<th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= link_to item_path(cart_item.item_id) do %>
            <%= image_tag cart_item.item.image, size: "64x48" %>
            <%= cart_item.item.name %>
          <% end %>
        <td>
        <td><%= price_include_tax(cart_item.item.price) %><td>
        <td><%= cart_item.amount %><td>
        <td><%= price_include_tax(cart_item.item.price, cart_item.amount) %><td>
        <td>
          <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
