<%= form_with model: item, url: (item.persisted? ? admin_item_path(item) : admin_items_path), local: true do |f| %>
      <table class='table'>
        <tr>
	        <th>商品画像</th>
      	  <th><%= f.file_field :image, class: "form-control-file itam_image", accept: 'image/*' %></th>
        </tr>
        <tr>
	        <th>商品名</th>
      	  <th><%= f.text_field :name, class: "form-control name" %></th>
        </tr>
        <tr>
	        <th>商品説明</th>
	        <th><%= f.text_area :introduction, class: "form-control introduction" %></th>
       </tr>
       <tr>
	       <th>ジャンル</th>
	       <th></th>
       </tr>
       <tr>
	       <th>税抜価格</th>
	       <th><%= f.text_field :price, class: "form-control price" %>円</th>
       </tr>
       <tr>
	       <th>販売ステータス</th>
	       <th></th>
       </tr>
         <th><%= f.submit %></th>
       </tr>
     </table>
<% end %>