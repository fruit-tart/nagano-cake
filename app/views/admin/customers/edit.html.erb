<h2><%= @customer.admin_side_fullname %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <%= render "public/shared/error_messages", resource: @customer %>

  <div class="field">
    <%= f.label :last_name, "名前" %>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", placeholder: "令和" %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autocomplete: "given-name", placeholder: "道子" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "フリガナ" %>
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, pattern: "^[ァ-ヶー]+$", autocomplete: "on", placeholder: "レイワ" %>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, pattern: "^[ァ-ヶー]+$", autocomplete: "on", placeholder: "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, pattern:"[0-9]{7}", autocomplete: "postal_code", placeholder: "0000000" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autocomplete: "street-address", placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.telephone_field :telephone_number, pattern:"[0-9]{1,15}", autocomplete: "phone-national", placeholder: "0000000000" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>
  
  <div class="field">
    <span>会員ステータス</span>
    <%= f.radio_button :is_active, true, id: "active_true" %>
    <%= f.label :is_active, "有効", for: "active_true" %>
    <%= f.radio_button :is_active, false, id: "active_false" %>
    <%= f.label :is_active, "退会", for: "active_false" %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>