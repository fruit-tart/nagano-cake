<div class="container">
  <div class="row">
    <h1>注文履歴詳細</h1>
    <table>
      <tr>
    	  <th>購入者</th>
    	  <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
      </tr>
      <tr>
    	  <th>注文日</th>
    	  <td><%= l(@order.created_at) %></td>
      </tr>
      <tr>
        <th>配送先</th>
    	  <td>〒<%= format_postal_code(@order.postal_code) %><br>
    	      <%= @order.name %></td>
    	  <td><%= @order.address %></td>
    	  <td></td>
      </tr>
      <tr>
        <th>支払方法</th>
    	  <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
        <%= form_with(model: @order, url: admin_order_path(@order.id), local: true) do |f| %>
          <%= f.select :status, Order.statuses_i18n.map { |key, value| [value, key] } %>
          <%= f.submit "更新" , class: "btn btn-success" %>
        <% end %>
        </td>
      </tr>
    </table>
  </div>
  
  <div class="row">
    <div class="col-9">
      <table class="table" style="font-size: 15pt">
        <thead class="table-dark">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td align="center"><%= order_detail.price.to_s(:delimited) %></td>
            <td align="center"><%= order_detail.amount %></td>
            <td align="center"><%= (order_detail.price * order_detail.amount).to_s(:delimited) %></td>
            <td align="center">
            <%= form_with(model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch, local: true) do |f| %>
              <%= f.select :making_status, OrderDetail.making_statuses_i18n.map { |key, value| [value, key] } %>
              <%= f.submit "更新" , class: "btn btn-success" %>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table>
        <tr>
      	  <th>商品合計</th>
      	  <td><%= @order.order_details.inject(0) {|sum, order_detail| sum + (order_detail.price * order_detail.amount)}.to_s(:delimited) %>円</td>
        </tr>
        <tr>
      	  <th>送料</th>
      	  <td><%= @order.shipping_cost %>円</td>
        </tr>
        <tr>
      	  <th>請求金額合計</th>
      	  <td><%= (@order.total_payment).to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
  </div>
  
</div>