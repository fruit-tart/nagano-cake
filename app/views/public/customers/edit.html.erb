<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-9">
      <h2 class="public-common-heading" data-text-en="Edit Profile">会員情報を編集</h2>
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <%= form_with model: @customer, url: customers_information_path, method: :patch do |form| %>
            <%= render "public/shared/error_messages", resource: form.object %>
            <%= render "public/customers/form_tag_helpers", form: form %>
            <div class="form-row mt-4">
              <%= form.submit "編集内容を保存", class: "btn btn-success btn-lg btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-6 col-lg-3 order-1 order-md-0 mb-4">
      <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger btn-sm btn-block" %>
    </div>
  </div>
</div>