<div class="container">
  <div class="row">
    <h2><%= @customer.admin_side_fullname %>さんの会員情報編集</h2>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
        <%= render "public/shared/error_messages", resource: @customer %>
        <table class='table'>
          <tr>
            <th><%= f.label :last_name, "名前" %><%= f.label :last_name, "(姓)" %></th>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", placeholder: "令和" %></td>
            <td><%= f.label :first_name, "(名)" %></td>
            <td><%= f.text_field :first_name, autocomplete: "given-name", placeholder: "道子" %></td>
          </tr>
          <tr>
            <th><%= f.label :last_name_kana, "フリガナ" %><%= f.label :last_name_kana, "(セイ)" %></th>
            <td><%= f.text_field :last_name_kana, pattern: "^[ァ-ヶー]+$", autocomplete: "on", placeholder: "レイワ" %></td>
            <td><%= f.label :first_name_kana, "(メイ)" %></td>
            <td><%= f.text_field :first_name_kana, pattern: "^[ァ-ヶー]+$", autocomplete: "on", placeholder: "ミチコ" %></td>
          </tr>
          <tr>
            <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
            <td><%= f.text_field :postal_code, pattern:"[0-9]{7}", autocomplete: "postal_code", placeholder: "0000000" %></td>
          </tr>
          <tr>
            <th><%= f.label :address, "住所" %></th>
            <td><%= f.text_field :address, autocomplete: "street-address", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
          </tr>
          <tr>
            <th><%= f.label :telephone_number, "電話番号" %></th>
            <td><%= f.telephone_field :telephone_number, pattern:"[0-9]{1,15}", autocomplete: "phone-national", placeholder: "0000000000" %></td>
          </tr>
          <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_active, true, id: "active_true" %>
              <%= f.label :is_active, "有効", for: "active_true" %>
              <%= f.radio_button :is_active, false, id: "active_false" %>
              <%= f.label :is_active, "退会", for: "active_false" %>
            </td>
          </tr>
        </table>
        <div class="actions">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>