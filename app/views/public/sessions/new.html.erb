<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="public-common-heading" data-text-en="Log in">ログイン</h2>
      </div>
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <%= form_with model: @customer, url: customer_session_path do |f| %>
            <div class="form-row align-items-center mb-2">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
            </div>
            <div class="form-row align-items-center mb-2">
              <%= f.label :password, "パスワード" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
            <div class="form-row mt-4">
              <%= f.submit "ログイン", class: "btn btn-success btn-lg btn-block" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
