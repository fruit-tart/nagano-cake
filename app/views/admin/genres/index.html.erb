<%= flash[:alert] %>
<%= flash[:notice] %>

<h1>ジャンル一覧・追加</h1>
  <%= form_with model: @genre, url: admin_genres_path, class: 'form-group' do |f| %>
    <div>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, size: 50, placeholder: 'ジャンル名を入力してください' %>
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
