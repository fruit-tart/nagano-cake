<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>

<div class="container">
  <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">商品名</th>
        <th scope="col">単価（税込）</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to item_path(cart_item.item_id) do %>
              <%= image_tag cart_item.item.image, size: "64x48" %>
              <%= cart_item.item.name %>
            <% end %>
          </td>
          <td><%= price_include_tax(cart_item.item.price).to_s(:delimited) %></td>
          <td>
            <%= form_with(model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true) do |form| %>
              <div class="form-group d-flex">
                <%= form.number_field :amount, step: 1, min: 1, class: "form-control" %>
                <%= form.submit "変更", class: "ml-2 btn btn-success" %>
              </div>
            <% end %>
          </td>
          <td><%= (price_include_tax(cart_item.item.price) * cart_item.amount).to_s(:delimited) %></td>
          <td>
            <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col">
      <dl>
        <dt>合計金額</dt>
        <dd><%= account_cart_items(@cart_items).to_s(:delimited) %></dd>
      </dl>
    </div>
  </div>
  <% unless current_customer.cart_items.nil? %>
  <div class="row">
    <div class="col text-center">
      <%= link_to "情報入力へ進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
