<div class="container">

  <div class="row">
    <h1>注文履歴一覧</h1>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
         <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to l(order.created_at),admin_order_path(order) %>
            </td>
            <td><%= order.name %></td>
            <td>
              <%= order.order_details.sum(:amount) %>
            </td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
