<h1>商品詳細</h1>
<div class ="container">
  <div class ="row">
    <div class ="col-3">
      <%= image_tag @item.image,size: '200x150' %>
    </div>
    <div class ="col-9">
      <table class='table'>
        <tr>
	        <th>商品名</th>
      	  <th><%= @item.name %></th>
        </tr>
        <tr>
	        <th>商品説明</th>
	        <th><%= @item.introduction %></th>
       </tr>
       <tr>
	       <th>ジャンル</th>
	       <th><%= @item.genre_id %></th>
       </tr>
       <tr>
	       <th>税込価格(税抜価格)</th>
	       <th><%= @item.price*1.1 %> (<%= @item.price %>)</th>
       </tr>
       <tr>
	       <th>販売ステータス</th>
	       <th><%= @item.is_active  %></th>
       </tr>
     </table>
    </div>
  </div>
  
  <div class ="row">
     <%= link_to edit_admin_item_path(@item), class: "btn btn-outline-secondary btn-block edit_admin_item_#{@item.id}" do %>
      編集する
     <% end %>
  </div>
</div>