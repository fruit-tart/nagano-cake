<div class="container">
  <div class="row">
    <h2><%= @customer.admin_side_fullname %>さんの会員詳細</h2>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.fullname %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.fullname_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td>〒<%= format_postal_code(@customer.postal_code) %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address%></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if @customer.is_active %>
            <p class="text-success"><strong>有効</strong></p>
          <% elsif %>
            <p class="text-muted"><strong>退会</strong></p>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
    <%= link_to "編集する", edit_admin_customer_path, class: "ml-auto btn btn-success" %>
    <%= link_to "注文履歴一覧を見る", orders_admin_customer_path, class: "ml-auto btn btn-primary" %>
</div>