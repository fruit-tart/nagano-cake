<h1>注文履歴一覧</h1>

<table class="order-index">
   <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
  <% order.order_details.each do |order_detail| %>
  <tr align="center">
    <td><%= link_to (order) do %>
    <%= order.created_at %>
    <% end %>
    </td>
    
    <td><%= order.name %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order.status %></td>
  <% end %>
  <% end %>
  </tr>
  </tbody>
</table>
