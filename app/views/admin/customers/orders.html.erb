<div class="container">
  <div class="row">
    <h1><%= @customer.admin_side_fullname %>さんの注文履歴</h1>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="table-dark">
          <tr align="center">
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
         <tbody>
          <% @orders.each do |order| %>
          <tr align="center">
            <td>
              <%= link_to l(order.created_at),admin_order_path(order) %>
            </td>
            <td>
              <%= order.order_details.sum(:amount) %>
            </td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
