<h1>注文履歴詳細</h1>

<table class='table'>
  <tr>
	  <th>購入者</th>
	  <th><%= @order.customer.last_name %><%= @order.customer.first_name %></th>
  </tr>
  <tr>
	  <th>注文日</th>
	  <th><%= l(@order.created_at) %></th>
  </tr>
  <tr>
    <th>配送先</th>
	  <th><%= @order.postal_code %></th>
	  <th><%= @order.address %></th>
	  <th><%= @order.name %></th>
  </tr>
  <tr>
    <th>支払方法</th>
	  <th><%= @order.payment_method_i18n %></th>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <%= form_with(model: @order, url: admin_order_path(@order.id), local: true) do |f| %>
    <th><%= f.select :status, Order.statuses_i18n  %></th>
    <th><%= f.submit "更新" , class: "btn btn-success" %></th>
    <% end %>
  </tr>
</table>


<table class="order-index">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
  </thead>
  
  <tbody>
  <% @order.order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.price.to_s(:delimited) %></td>
    <td><%= order_detail.amount %></td>
    <td><%= (order_detail.price * order_detail.amount).to_s(:delimited) %></td>
    <%= form_with(model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch, local: true) do |f| %>
    <td><%= f.select :making_status, OrderDetail.making_statuses_i18n  %></td>
    <td><%= f.submit "更新" , class: "btn btn-success" %></td>
    <% end %>
  </tr>
  <% end %>
  </tbody>
</table>

<table>
  <tr>
	  <th>商品合計</th>
	  <td><%= @order.order_details.inject(0) {|sum, order_detail| sum + (order_detail.price * order_detail.amount)}.to_s(:delimited) %>円</td>
  </tr>
  <tr>
	  <th>送料</th>
	  <td><%= @order.shipping_cost %>円</td>
  </tr>
  <tr>
	  <th>請求金額合計</th>
	  <td><%= @order.total_payment %>円</td>
  </tr>
</table>